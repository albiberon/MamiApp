<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">

    <ImageView
        android:id="@+id/pPhoto"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bergstein_regenlaarzen_geel_geel_8718191084519" />

    <TextView
        android:id="@+id/pName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="Product Name"
        android:textColor="#F74A7D"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pPhoto" />

    <TextView
        android:id="@+id/pDetails"
        android:layout_width="376dp"
        android:layout_height="177dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus varius facilisis dui aliquam congue. In vel aliquet magna. Integer luctus, tortor quis pharetra mollis, ex sapien finibus urna, eu dapibus ex diam a eros. Aenean a tortor condimentum, varius augue quis, finibus lorem. Morbi sollicitudin felis ac odio pellentesque, in egestas elit accumsan. Praesent bibendum pellentesque eleifend. Suspendisse potenti. Vivamus enim diam, gravida eget finibus vehicula, vulputate vitae erat. Aliquam malesuada diam vitae ultricies hendrerit."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="#f74a7d"
        android:fontFamily="@font/gill_sans_regular"
        android:lineSpacingExtra="10sp"
        android:paddingTop="20dp"
        android:text="ADD TO CART"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pPrice" />

    <TextView
        android:id="@+id/pPrice"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:background="#63FAA1"
        android:fontFamily="@font/gill_sans_bold"
        android:lineSpacingExtra="10sp"
        android:paddingTop="15dp"
        android:text="99.99"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#f74a7d"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>